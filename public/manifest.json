{
  "manifest_version": 3,
  "name": "Chrome Extension",
  "version": "1.0.0",
  "description": "A Chrome extension with popup built using Svelte",
  "permissions": [
    "alarms",
    "notifications"
  ],
  "action": {
    "default_popup": "index.html",
    "default_title": "Chrome Extension"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
