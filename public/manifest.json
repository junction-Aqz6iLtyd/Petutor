{
  "manifest_version": 3,
  "name": "Petutor",
  "version": "1.0.0",
  "description": "귀여운 와옹이와 함께하는 영어 학습 Chrome Extension",
  "permissions": [
    "alarms",
    "notifications",
    "storage",
    "activeTab",
    "tabs"
  ],
  "action": {
    "default_popup": "index.html",
    "default_title": "Petutor"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "assets/chara.png",
        "assets/animation/*.webp"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "icons/app-icon@16.png",
    "48": "icons/app-icon@48.png",
    "128": "icons/app-icon@128.png"
  }
}
